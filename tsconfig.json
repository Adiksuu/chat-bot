{
    "compilerOptions": {
      "target": "es5",
      "lib": ["es2015", "dom"],
      "module": "amd",
      "sourceMap": true,
      "declaration": false,
      "noImplicitAny": true,
      "removeComments": true,
      "strictNullChecks": true,
      "strictFunctionTypes": true,
      "noImplicitThis": true,
      "alwaysStrict": true,
      "outFile": "./dist/scripts/script.js",
      "baseUrl": ".",
      "paths": {
        "@firebase/app": ["node_modules/firebase/app"]
      },
      "moduleResolution": "nodenext"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
  }
  